{
  "scripts": {
    "compile": "elm make src/Main.elm --optimize --output=docs/elm.optimized.js",
    "minify": "google-closure-compiler --js=docs/elm.optimized.js --js_output_file=docs/elm.js",
    "postminify": "rm -rf docs/elm.optimized.js",
    "build": "npm run compile && npm run minify",
    "start": "elm-live src/Main.elm --pushstate --open"
  },
  "devDependencies": {
    "elm": "^0.19.1-3",
    "elm-format": "^0.8.4",
    "elm-json": "^0.2.8",
    "elm-live": "^4.0.2",
    "google-closure-compiler": "^20201207.0.0"
  }
}
