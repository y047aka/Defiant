{
  "scripts": {
    "compile": "elm make src/Main.elm --optimize --output=public/elm.optimized.js",
    "minify": "google-closure-compiler --js=public/elm.optimized.js --js_output_file=public/elm.js",
    "postminify": "rm -rf public/elm.optimized.js",
    "build": "npm run compile && npm run minify",
    "start": "elm-live src/Main.elm --pushstate --open"
  },
  "devDependencies": {
    "elm": "^0.19.1-5",
    "elm-format": "^0.8.5",
    "elm-json": "^0.2.10",
    "elm-live": "^4.0.2",
    "google-closure-compiler": "^20210202.0.0"
  }
}
